<div class="content">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8 text-center">
      <div class="row">
        <%= form_tag '/home/process_text', method: 'post', multipart: true do %>

          <div class="col-12">
            <h1> Test Lumu</h1>
            <span>Ingrese o cargue texto a procesar</span>
            <div class="mb-3">
              <textarea name="string" rows="5" class="form-control"> </textarea>
            </div>
            <div class="mb-3">
              <input class="form-control" name="file" type="file" id="formFile">
            </div>
            <div class="mb-3 text-left row">
              <div class="col-4"></div>
              <div class="col-4">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="method_process" value="1" id="flexRadioDefault1" checked>
                  <label class="form-check-label" for="flexRadioDefault1">
                    Metodo 1
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="method_process" value="2" id="flexRadioDefault2">
                  <label class="form-check-label" for="flexRadioDefault2">
                    Metodo 2
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="method_process" disabled value="3" id="flexRadioDefault2">
                  <label class="form-check-label" for="flexRadioDefault2">
                    Metodo 3
                  </label>
                </div>
              </div>
            </div>

            <button type="submit" class="btn btn-success">Procesar</button>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>